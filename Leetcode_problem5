class Solution {
    public String longestPalindrome(String s) {
        if (s == null || s.length() < 1) return "";
        int start = 0, end = 0;
        
        for (int i = 0; i < s.length(); i++) {
            // Get the length of the longest palindromic substring with an odd length
            int len1 = expandAroundCenter(s, i, i);
            // Get the length of the longest palindromic substring with an even length
            int len2 = expandAroundCenter(s, i, i + 1);
            // Find the maximum length between odd and even palindromes
            int len = Math.max(len1, len2);
            
            if (len > (end - start)) {
                // Update start and end pointers if a longer palindrome is found
                start = i - (len - 1) / 2;
                end = i + len / 2;
            }
        }
        return s.substring(start, end + 1);
    }
    
    // Helper method to expand around a center and return the length of the palindrome
    private int expandAroundCenter(String s, int left, int right) {
        int L = left, R = right;
        // Expand as long as the characters match and we are within bounds
        while (L >= 0 && R < s.length() && s.charAt(L) == s.charAt(R)) {
            L--;
            R++;
        }
        // Return the length of the palindrome found
        // R - L + 1 is the window size, but we expanded one step too far on both ends
        return R - L - 1;
    }
}
